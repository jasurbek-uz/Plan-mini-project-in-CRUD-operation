<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reja</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #b8bbd1">
    <div class="container">
      <h1 class="display-4 text-center py-1">Reja va Maqsadlar!</h1>

      <div class="jumbotron p-3 shadow-sm">
        <form action="/create-item" method="POST" id="create-form">
          <div class="d-flex align-items-center">
            <input
              type="text"
              name="reja"
              autofocus
              autocomplete="off"
              style="flex: 1"
              id="create-field"
              class="form-control mr-3"
            />
            <button class="btn btn-primary" style="border-radius: 20px">
              Yangi Reja Qoshish
            </button>
          </div>
        </form>
      </div>
      <ul id="item-list" class="list-group">
        <%items.map((item)=>{ %>
            <li
              class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
            >
              <span class="item-text"><%= item.reja%></span>
              <div>
                <button data-id="<%=item._id%>" class="edit-me btn btn-secondary btn-sm mr-1">
                  O`zgartirish
                </button>
                <button data-id="<%=item._id%>" class="delete-me btn btn-danger btn-sm">Ochirish</button>
              </div>
            </li>

        <% })%>
      </ul>
      <button id="clear-all" class="btn btn-danger" style="border-radius: 20px">
        Hamma Rejalarni Ochirish
      </button>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/browser.js"></script>

  </body>
</html>






















